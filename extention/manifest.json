{
  "manifest_version": 3,
  "name": "SmartTab",
  "version": "1.0.0",
  "description": "Smart new tab with website statistics, todo list, bookmark management, and auto tab sorting",
  "permissions": [
    "storage",
    "bookmarks",
    "tabs",
    "tabGroups",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://source.unsplash.com/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html",
        "blocked.css",
        "blocked.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}